@page
@using CustomerPortalRazor.Data.Models
@model CustomerPortalRazor.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group">
                <label asp-for="Customer.CustomerName" class="control-label"></label>
                <input asp-for="Customer.CustomerName" class="form-control" />
                <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.AddressLine1" class="control-label"></label>
                <input asp-for="Customer.AddressLine1" class="form-control" />
                <span asp-validation-for="Customer.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.AddressLine2" class="control-label"></label>
                <input asp-for="Customer.AddressLine2" class="form-control" />
                <span asp-validation-for="Customer.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Town" class="control-label"></label>
                <input asp-for="Customer.Town" class="form-control" />
                <span asp-validation-for="Customer.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.County" class="control-label"></label>
                <input asp-for="Customer.County" class="form-control" />
                <span asp-validation-for="Customer.County" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PostCode" class="control-label"></label>
                <input asp-for="Customer.PostCode" class="form-control" />
                <span asp-validation-for="Customer.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Phone" class="control-label"></label>
                <input asp-for="Customer.Phone" class="form-control" />
                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Status" class="control-label"></label>
                <select asp-for="Customer.Status" 
                    class="form-control" 
                    asp-items="Html.GetEnumSelectList<Status>()"></select>
                <span asp-validation-for="Customer.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@if (Model.Customer.Status.ToString() == "Inactive")
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("Status is Inactive");
            };
        </script>
    }
